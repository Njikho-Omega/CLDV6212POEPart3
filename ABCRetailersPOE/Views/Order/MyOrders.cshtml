@model IEnumerable<ABCRetailersPOE.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2><i class="fas fa-shopping-bag"></i> My Orders</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Product</th>
                    <th>Order Date</th>
                    <th>Qty</th>
                    <th>Total</th>
                    <th>Status</th>
                    <!-- Removed the "View" header since we're removing the action column -->
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><code>@order.Id</code></td>
                        <td>@order.ProductName</td>
                        <td>@order.OrderDateUtc?.ToLocalTime().LocalDateTime</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <span class="badge bg-@(order.Status switch {
                                OrderStatus.Submitted => "primary",
                                OrderStatus.Processing => "info",
                                OrderStatus.Processed => "success",
                                OrderStatus.Cancelled => "danger",
                                _ => "secondary"
                            })">
                                @order.Status
                            </span>
                        </td>
                        <!-- Removed the entire action buttons column -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        <i class="fas fa-info-circle"></i> You have no orders yet.
        <a href="@Url.Action("Index", "Home")" class="alert-link">Start shopping</a> to place your first order!
    </div>
}