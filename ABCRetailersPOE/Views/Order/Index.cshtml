@model IEnumerable<ABCRetailersPOE.Models.Order>
@{
    ViewData["Title"] = "Orders";
    var isAdmin = User.IsInRole("Admin");
}

<h2><i class="fas fa-shopping-bag"></i> Orders</h2>

@if (Model != null && Model.Any())
{
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th> 
                    <th>Product</th>
                    <th>Order Date</th>
                    <th>Qty</th>
                    <th>Total</th>
                    <th>Status</th>
                    @if (isAdmin)
                    {
                        <th class="text-end">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td><code>@order.Id</code></td>
                        <td>@order.CustomerId</td> 
                        <td>@order.ProductName</td>
                        <td>@order.OrderDateUtc?.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            @if (isAdmin)
                            {
                                <!-- Admin sees dropdown for status changes (no form) -->
                                <select class="form-select form-select-sm status-select" 
                                        data-order-id="@order.Id" data-product-name="@order.ProductName"
                                        onchange="updateOrderStatus(this)"
                                        style="min-width: 120px;">
                                    <option value="Submitted" selected="@(order.Status == OrderStatus.Submitted)">Submitted</option>
                                    <option value="Processing" selected="@(order.Status == OrderStatus.Processing)">Processing</option>
                                    <option value="Completed" selected="@(order.Status == OrderStatus.Processed)">Processed</option>
                                    <option value="Cancelled" selected="@(order.Status == OrderStatus.Cancelled)">Cancelled</option>
                                </select>
                            }
                            else
                            {
                                <!-- Customer sees read-only badge -->
                                <span class="badge bg-@(order.Status switch {
                                    OrderStatus.Submitted => "primary",
                                    OrderStatus.Processing => "info",
                                    OrderStatus.Processed => "success",
                                    OrderStatus.Cancelled => "danger",
                                    _ => "secondary"
                                })">
                                    @order.Status
                                </span>
                            }
                        </td>
                        @if (isAdmin)
                        {
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@order.Id"
                                       class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger"
                                            onclick="confirmDelete('@order.Id','@order.ProductName')" title="Delete Order">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info mt-4">
        <i class="fas fa-info-circle"></i> No orders found.
    </div>
}

<!-- Delete Confirmation Modal - Only include if user is Admin -->
@if (isAdmin)
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete order for product <strong id="productName"></strong>?
                    <div class="alert alert-warning mt-2">
                        <small><i class="fas fa-exclamation-triangle"></i> This action cannot be undone.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @if (isAdmin)
    {
        <script>
            function confirmDelete(orderId, productName) {
                if (!orderId) {
                    alert('Invalid order ID');
                    return;
                }
                
                document.getElementById('productName').textContent = productName || 'Unknown Product';
                document.getElementById('deleteForm').action = '@Url.Action("Delete", "Order")/' + encodeURIComponent(orderId);
                new bootstrap.Modal(document.getElementById('deleteModal')).show();
            }

            function updateOrderStatus(selectElement) {
                const newStatus = selectElement.value;
                const orderId = selectElement.getAttribute('data-order-id');
                const productName = selectElement.getAttribute('data-product-name');
                
                console.log('Selected status:', newStatus);
                console.log('Order ID:', orderId);
                console.log('Product Name:', productName);
                
                if (!newStatus) {
                    alert('Please select a valid status');
                    return;
                }
                
                if (confirm(`Are you sure you want to change the status of order for "${productName}" to ${newStatus}?`)) {
                    // Show loading state
                    selectElement.disabled = true;
                    
                    // Create form data manually
                    const formData = new FormData();
                    formData.append('id', orderId);
                    formData.append('newStatus', newStatus);
                    formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);
                    
                    console.log('FormData before fetch:');
                    for (let [key, value] of formData.entries()) {
                        console.log(key + ': ' + value);
                    }
                    
                    fetch('@Url.Action("UpdateOrderStatus", "Order")', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        console.log('Response status:', response.status);
                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }
                        return response.json();
                    })
                    .then(data => {
                        console.log('Response data:', data);
                        selectElement.disabled = false;
                        if (data.success) {
                            showToast('Success', data.message, 'success');
                            updateSelectAppearance(selectElement, newStatus);
                        } else {
                            showToast('Error', data.message, 'error');
                            // Revert to original selection on error
                            const originalOption = Array.from(selectElement.options).find(opt => opt.hasAttribute('selected'));
                            if (originalOption) {
                                selectElement.value = originalOption.value;
                            }
                        }
                    })
                    .catch(error => {
                        selectElement.disabled = false;
                        showToast('Error', 'Failed to update status: ' + error.message, 'error');
                        console.error('Error:', error);
                    });
                } else {
                    // User cancelled - revert the selection to the original value
                    const originalOption = Array.from(selectElement.options).find(opt => opt.hasAttribute('selected'));
                    if (originalOption) {
                        selectElement.value = originalOption.value;
                    }
                }
            }

            function updateSelectAppearance(selectElement, status) {
                // Remove all status classes
                selectElement.classList.remove(
                    'border-primary', 'border-info', 'border-success', 'border-danger',
                    'text-primary', 'text-info', 'text-success', 'text-danger'
                );
                
                // Add appropriate styling based on status
                switch(status) {
                    case 'Submitted':
                        selectElement.classList.add('border-primary', 'text-primary');
                        break;
                    case 'Processing':
                        selectElement.classList.add('border-info', 'text-info');
                        break;
                    case 'Completed':
                        selectElement.classList.add('border-success', 'text-success');
                        break;
                    case 'Cancelled':
                        selectElement.classList.add('border-danger', 'text-danger');
                        break;
                }
            }

            function showToast(title, message, type) {
                // Create a simple toast notification
                const toast = document.createElement('div');
                toast.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
                toast.style.cssText = 'top: 20px; right: 20px; z-index: 1060; min-width: 300px;';
                toast.innerHTML = `
                    <strong>${title}</strong> ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                
                document.body.appendChild(toast);
                
                // Auto remove after 5 seconds
                setTimeout(() => {
                    if (toast.parentNode) {
                        toast.parentNode.removeChild(toast);
                    }
                }, 5000);
            }

            // Initialize select appearances on page load
            document.addEventListener('DOMContentLoaded', function() {
                const statusSelects = document.querySelectorAll('.status-select');
                statusSelects.forEach(select => {
                    updateSelectAppearance(select, select.value);
                });
            });
        </script>
    }
}