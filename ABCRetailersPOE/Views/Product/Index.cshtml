@model IEnumerable<ABCRetailersPOE.Models.Product>
@{
    ViewData["Title"] = "Products";
    var isAdmin = User.IsInRole("Admin");
    var isCustomer = User.IsInRole("Customer");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-box"></i> Products</h2>

    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Product
        </a>
    }
</div>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(product?.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-image fa-3x text-muted"></i>
                        </div>
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@product?.ProductName</h5>
                        <p class="card-text text-muted flex-grow-1">
                            @(product?.Description?.Length > 100 ? product.Description.Substring(0, 100) + "..." : product?.Description)
                        </p>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="h5 text-success mb-0">@product?.Price.ToString("C")</span>
                                <span class="badge bg-@(product?.StockAvailable > 10 ? "success" : product?.StockAvailable > 0 ? "warning" : "danger")">
                                    Stock: @product?.StockAvailable
                                </span>
                            </div>

                            @if (isCustomer)
                            {
                                <!-- Add to Cart button for customers -->
                                <form asp-controller="Cart" asp-action="Add" method="get" class="d-inline">
                                    <input type="hidden" name="productId" value="@product?.Id" />
                                    <button type="submit" class="btn btn-primary w-100"
                                            @(product?.StockAvailable <= 0 ? "disabled" : "")>
                                        <i class="fas fa-cart-plus"></i>
                                        @(product?.StockAvailable <= 0 ? "Out of Stock" : "Add to Cart")
                                    </button>
                                </form>
                            }
                            else if (isAdmin)
                            {
                                <!-- Admin actions -->
                                <div class="btn-group w-100" role="group">
                                    <a asp-action="Edit" asp-route-id="@product?.Id" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger"
                                            onclick="confirmDelete('@product?.Id','@product?.ProductName')">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <!-- For non-authenticated users (if allowed) -->
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-sign-in-alt"></i> Login to Purchase
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> No products found.
        @if (isAdmin)
        {
            <a asp-action="Create" class="alert-link">Add your first product</a>
        }
    </div>
}

<!-- Delete Confirmation Modal for Admin -->
@if (isAdmin)
{
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete product <strong id="productName"></strong>?
                    <div class="alert alert-warning mt-2">
                        <small><i class="fas fa-exclamation-triangle"></i> This action cannot be undone.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form id="deleteForm" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(productId, productName) {
            document.getElementById('productName').textContent = productName || '';
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Product")/' + encodeURIComponent(productId || '');
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}